@using Core.Domain.Entities
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Contact

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Contact</title>
</head>

<body>
    <h1>Edit Contact</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Married"></label>
            <input asp-for="Married" type="checkbox" />
        </div>

        <div>
            <label asp-for="Phone"></label>
            <input asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Salary"></label>
            <input asp-for="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <button type="submit">Save</button>
    </form>

    <form asp-controller="DotnetContacts" asp-action="Index" method="get" style="display:inline;">
        <button type="submit">To list</button>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
</body>

</html>
